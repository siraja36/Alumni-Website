            <tr><td>News HeadLine</td><td>:</td><td>
                <asp:TextBox ID="newshead" runat="server"></asp:TextBox><br />
                <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ErrorMessage="Please enter a headline" ForeColor="Red" ControlToValidate="newshead" SetFocusOnError="true"></asp:RequiredFieldValidator> 
                </td></tr>
                <tr><td>News By - Name</td><td>:</td><td>
                <asp:TextBox ID="newsname" runat="server"></asp:TextBox><br />
                    <asp:RequiredFieldValidator ID="RequiredFieldValidator2" runat="server" ErrorMessage="Please enter a name" ControlToValidate="newsname" ForeColor="Red" SetFocusOnError="true" Display="Dynamic"></asp:RequiredFieldValidator>
