                <textarea id="newsdetail" cols="80" rows="8" runat="server"></textarea><br />
                <asp:RequiredFieldValidator ID="RequiredFieldValidator4" runat="server" ErrorMessage="Please enter an description" ForeColor="Red" SetFocusOnError="true" ControlToValidate="newsdetail"></asp:RequiredFieldValidator>
                </td></tr>
            <tr><td>Attachment</td><td>:</td><td>
                <asp:FileUpload ID="newsattach" runat="server" /></td></tr>
            <tr><td></td><td></td><td></td></tr> 
